<div class="container mt-4">
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="card-title"><%= @restaurant.name %></h1>
      <p class="mb-1"><strong>Address:</strong> <%= @restaurant.address %></p>
      <p class="mb-1"><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
      <p class="mb-0"><strong>Category:</strong> <%= @restaurant.category %></p>
    </div>
  </div>

  <div class="border p-3 mb-4" style="border-color: rgb(101, 93, 68);">
    <h3 class="mb-3" style="font-size: 1.75rem;">Reviews:</h3>
    <ul class="list-group mb-4">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item">
          <strong><%= review.rating %>/5</strong> - <%= review.content %>
        </li>
      <% end %>
    </ul>

    <!-- Now we put the form straight in here -->
    <h4 class="mt-3">Leave a review</h3>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-outline-secondary" %>
  </div>

</div>
