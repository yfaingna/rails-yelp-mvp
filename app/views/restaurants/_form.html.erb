<div class="card p-4 shadow-sm">

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name, input_html: { class: "form-control" } %>
    <%= f.input :address, input_html: { class: "form-control" } %>
    <%= f.input :phone_number, input_html: { class: "form-control" } %>
    <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: "Select a category" %>

    <div class="mt-3">
    <%= f.submit "Create restaurant", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
